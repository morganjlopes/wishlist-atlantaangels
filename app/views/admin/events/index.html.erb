<%= content_for :page_actions do %>
  <%= link_to "New event", new_admin_event_path, class: 'btn btn-primary' %>
<% end %>

<div id="events">
  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <%= link_to event.name, admin_event_path(event) %>
          </td>
          <td class='text-end'>
            <div class="dropdown">
              <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Edit", edit_admin_event_path(event), class: 'dropdown-item' %>
                </li>
                <li>
                  <%= link_to "View", admin_event_path(event), class: 'dropdown-item' %>
                </li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

